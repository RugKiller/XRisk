{
  "manifest_version": 3,
  "name": "X用户标注",
  "version": "1.0",
  "description": "X用户标注",
  "permissions": [
    "scripting",
    "tabs",
    "sidePanel"
  ],
  "host_permissions": [
    "*://*.x.com/*",
    "*://*.twitter.com/*"
  ],
  "action": {
    "default_title": "X用户分析"
  },
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["sidebar.js"],
      "matches": ["<all_urls>"]
    }
  ]
} 